{
  "manifest_version": 3,
  "name": "KM Downloader",
  "version": "1.1",
  "description": "Download slides and video frames from KM platform",
  "permissions": [
    "scripting",
    "downloads"
  ],
  "host_permissions": [
    "https://intmed2.mc.ntu.edu.tw/media/*",
    "https://intmed2.mc.ntu.edu.tw/sys/*",
    "http://notes.cm.ntu.edu.tw/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
