{
  "manifest_version": 3,
  "name": "KM Downloader",
  "version": "1.0",
  "description": "Download slides and video frames from KM platform",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "KM Downloader"
  }
}
